    "pretty": "prettier --write '**/*.ts' '**/*.tsx' '**/*.js' '**/*.json' '**/*.md'",
    "publish": "changeset publish",
    "test": "jest",
    "version": "changeset version"
  },
  "keywords": [
    "components",
    "shared",
    "utils"
  ],
  "author": {
    "name": "Garth Henson",
    "email": "garth@guahanweb.com"
  },
  "license": "ISC",
