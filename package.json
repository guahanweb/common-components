  "description": "Common components used in my projects",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:guahanweb/common-components.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "changeset": "changeset",
    "coverage": "jest --coverage",
