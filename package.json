    "*.{ts,tsx,js}": "eslint --cache --fix",
    "*.{ts,tsx,js,json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
